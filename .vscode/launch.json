    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Debugger",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "program": "${workspaceFolder}\\backend\\manage.py",
            "args": [
                "runserver",
                "--no-color",
            ],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput",
                "DjangoDebugging"
            ]
        }
    ]
}
